<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ydl.nmis.schedule.mapper.ScheMasterMapper">


    <resultMap type="ScheMaster" id="ScheMasterResult">
        <!-- 基础字段映射 -->
        <result property="userId"    column="id"    />
        <result property="name"    column="name"    />
        <result property="sNo"    column="seq_no"    />
        <result property="nurseLevel"    column="nurse_level"    />
        <result property="remark"    column="remark"    />
        <result property="id"    column="id"    />
        <result property="nurseId"    column="nurse_id"    />
        <result property="nurseName"    column="nurse_name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="deptName"    column="dept_name"    />
        <result property="planId"    column="plan_id"    />
        <result property="remark"    column="remark"    />
        <result property="createId"    column="create_id"    />
        <result property="creator"    column="creator"    />
        <result property="createDate"    column="create_date"    />
        <result property="modifyId"    column="modify_id"    />
        <result property="modifier"    column="modifier"    />
        <result property="modifyDate"    column="modify_date"    />
        <result property="unitCode"    column="unit_code"    />
        <result property="hours1"    column="hours_1"    />
        <result property="hours2"    column="hours_2"    />
        <result property="hours3"    column="hours_3"    />
        <result property="hours4"    column="hours_4"    />
        <result property="hours5"    column="hours_5"    />
        <result property="hours6"    column="hours_6"    />
        <result property="hours7"    column="hours_7"    />
        <result property="hours8"    column="hours_8"    />
        <result property="hours9"    column="hours_9"    />

        <!-- 动态关联 day1-day7 -->
        <association property="day1" column="{nurseId=nurse_id, planId=plan_id, queryDate=day1_date}"
                     select="selectScheDetailByDate"/>
        <association property="day2" column="{nurseId=nurse_id, planId=plan_id, queryDate=day2_date}"
                     select="selectScheDetailByDate"/>
        <association property="day3" column="{nurseId=nurse_id, planId=plan_id, queryDate=day2_date}"
                     select="selectScheDetailByDate"/>
        <association property="day4" column="{nurseId=nurse_id, planId=plan_id, queryDate=day2_date}"
                     select="selectScheDetailByDate"/>
        <association property="day5" column="{nurseId=nurse_id, planId=plan_id, queryDate=day2_date}"
                     select="selectScheDetailByDate"/>
        <association property="day6" column="{nurseId=nurse_id, planId=plan_id, queryDate=day2_date}"
                     select="selectScheDetailByDate"/>
        <association property="day7" column="{nurseId=nurse_id, planId=plan_id, queryDate=day2_date}"
                     select="selectScheDetailByDate"/>

    </resultMap>

    <!-- 按日期查询单天排班明细 -->
    <select id="selectScheDetailByDate" resultMap="com.ydl.nmis.schedule.mapper.ScheDetailMapper.ScheDetailResult">
        SELECT * FROM nmis_sche_detail
        WHERE nurse_id = #{nurseId}
          AND plan_id = #{planId}
          AND sche_date = #{queryDate}
            LIMIT 1
    </select>

    <sql id="selectScheMasterVo">
        select id, nurse_id, nurse_name, dept_id, dept_name, plan_id, remark, create_id, creator, create_date, modify_id, modifier, modify_date, unit_code, hours_1, hours_2, hours_3, hours_4, hours_5, hours_6, hours_7, hours_8, hours_9 from nmis.nmis_sche_master
    </sql>

    <sql id="selectScheMasterVp">
        select a.user_id,   --排班用户id
               d.name,   --排班用户姓名
               a.seq_no ,  --排序号
               d.nurse_level ,   --当前能级
               to_date(d.enter_date,'YYYY') ,    --来院时间
               e.remark   ,      --备注
               d.status ,        -- 状态： 1：停用 0：启用
               e.id ,      --nmis.nmis_sche_master 主键
               e.create_id,  --创建人编码
               e.modify_id  ,   --  最后一次操作人编号
               #{beginDate} AS day1_date,
               #{beginDate} + INTERVAL '1' DAY AS day2_date,
               #{beginDate} + INTERVAL '2' DAY AS day3_date,
               #{beginDate} + INTERVAL '3' DAY AS day4_date,
               #{beginDate} + INTERVAL '4' DAY AS day5_date,
               #{beginDate} + INTERVAL '5' DAY AS day6_date,
               #{beginDate} + INTERVAL '6' DAY AS day7_date,
               e.hours_1 ,      --白班工时
               e.hours_2 ,      --夜班工时
               e.hours_3 ,      --假期工时
               e.hours_4 ,      --休息工时
               e.hours_5  ,      --其他工时
               e.hours_6 ,       --累计加扣班
               e.hours_7 ,       --累计存假
               e.hours_8 ,       --年假
               e.hours_9         --总工时
        from
            nmis.nmis_sche_users a
                left join nmis.nmis_sche_user_group b on a.dept_code = b.dept_id
                left join nmis.nmis_sche_plan c on b.dept_id = c.dept_id
                left join nmis.nmis_hr_user d on a.user_id = d.nurse_id
                left join nmis.nmis_sche_master e on e.plan_id = c.id and e.nurse_id = a.user_id
    </sql>

    <select id="selectScheMasterList" parameterType="ScheMaster" resultMap="ScheMasterResult">
        <include refid="selectScheMasterVp"/>
        <where>
            <if test="id != null  and id != ''"> and e.id = #{id}</if>
            <if test="deptId != null  and deptId != ''"> and a.dept_id = #{deptId}</if>
            <if test="beginDate != null  and beginDate != ''"> and b.begin_date = #{beginDate}</if>
            <if test="planId != null  and planId != ''"> and c.plan_id = #{planId}</if>
            <if test="endDate != null  and endDate != ''"> and b.end_date = #{endDate}</if>
            <if test="groupId != null  and groupId != ''"> and b.group_id = #{groupId}</if>

        </where>
    </select>

    <select id="selectScheMasterById" parameterType="String" resultMap="ScheMasterResult">
        <include refid="selectScheMasterVo"/>
        where id = #{id}
    </select>

    <insert id="insertScheMaster" parameterType="ScheMaster" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" order="BEFORE" resultType="String">
            select  nmis.seq_sche_master.nextval as id from dual
        </selectKey>
        insert into nmis.nmis_sche_master
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="nurseId != null">nurse_id,</if>
            <if test="nurseName != null">nurse_name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="deptName != null">dept_name,</if>
            <if test="planId != null">plan_id,</if>
            <if test="remark != null">remark,</if>
            <if test="createId != null">create_id,</if>
            <if test="creator != null">creator,</if>
            <if test="createDate != null">create_date,</if>
            <if test="modifyId != null">modify_id,</if>
            <if test="modifier != null">modifier,</if>
            <if test="modifyDate != null">modify_date,</if>
            <if test="unitCode != null">unit_code,</if>
            <if test="hours1 != null">hours_1,</if>
            <if test="hours2 != null">hours_2,</if>
            <if test="hours3 != null">hours_3,</if>
            <if test="hours4 != null">hours_4,</if>
            <if test="hours5 != null">hours_5,</if>
            <if test="hours6 != null">hours_6,</if>
            <if test="hours7 != null">hours_7,</if>
            <if test="hours8 != null">hours_8,</if>
            <if test="hours9 != null">hours_9,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="nurseId != null">#{nurseId},</if>
            <if test="nurseName != null">#{nurseName},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="deptName != null">#{deptName},</if>
            <if test="planId != null">#{planId},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createId != null">#{createId},</if>
            <if test="creator != null">#{creator},</if>
            <if test="createDate != null">#{createDate},</if>
            <if test="modifyId != null">#{modifyId},</if>
            <if test="modifier != null">#{modifier},</if>
            <if test="modifyDate != null">#{modifyDate},</if>
            <if test="unitCode != null">#{unitCode},</if>
            <if test="hours1 != null">#{hours1},</if>
            <if test="hours2 != null">#{hours2},</if>
            <if test="hours3 != null">#{hours3},</if>
            <if test="hours4 != null">#{hours4},</if>
            <if test="hours5 != null">#{hours5},</if>
            <if test="hours6 != null">#{hours6},</if>
            <if test="hours7 != null">#{hours7},</if>
            <if test="hours8 != null">#{hours8},</if>
            <if test="hours9 != null">#{hours9},</if>
        </trim>
    </insert>

    <update id="updateScheMaster" parameterType="ScheMaster">
        update nmis.nmis_sche_master
        <trim prefix="SET" suffixOverrides=",">
            <if test="nurseId != null">nurse_id = #{nurseId},</if>
            <if test="nurseName != null">nurse_name = #{nurseName},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="deptName != null">dept_name = #{deptName},</if>
            <if test="planId != null">plan_id = #{planId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createId != null">create_id = #{createId},</if>
            <if test="creator != null">creator = #{creator},</if>
            <if test="createDate != null">create_date = #{createDate},</if>
            <if test="modifyId != null">modify_id = #{modifyId},</if>
            <if test="modifier != null">modifier = #{modifier},</if>
            <if test="modifyDate != null">modify_date = #{modifyDate},</if>
            <if test="unitCode != null">unit_code = #{unitCode},</if>
            <if test="hours1 != null">hours_1 = #{hours1},</if>
            <if test="hours2 != null">hours_2 = #{hours2},</if>
            <if test="hours3 != null">hours_3 = #{hours3},</if>
            <if test="hours4 != null">hours_4 = #{hours4},</if>
            <if test="hours5 != null">hours_5 = #{hours5},</if>
            <if test="hours6 != null">hours_6 = #{hours6},</if>
            <if test="hours7 != null">hours_7 = #{hours7},</if>
            <if test="hours8 != null">hours_8 = #{hours8},</if>
            <if test="hours9 != null">hours_9 = #{hours9},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteScheMasterById" parameterType="String">
        delete from nmis.nmis_sche_master where id = #{id}
    </delete>

    <delete id="deleteScheMasterByIds" parameterType="String">
        delete from nmis.nmis_sche_master where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>